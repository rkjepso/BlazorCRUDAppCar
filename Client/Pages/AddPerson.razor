@page "/addperson"
@using BlazorCRUDApp.Shared

@*@inject HttpClient Http*@
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject IWebService WebService
@inherits BasePage

<MyStyle></MyStyle>


<h2>Add Person</h2>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="FirstName"> First Name *</label>
            <input form="FirstName" class="form-control" @bind="@person.FirstName" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="LastName"> Last Name *</label>
            <input form="LastName" class="form-control" @bind="@person.LastName" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="Email"> Email </label>
            <input form="Email" class="form-control" @bind="@person.Email" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="MobileNo"> Mobile No </label>
            <input form="mobileNo" class="form-control" @bind="@person.MobileNo" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" class="btn btn-primary" @onclick="@Save" value="Save" />
            <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
        </div>
    </div>
</div>

<Message Error=@base.Error StrInfo=@base.StrInfo></Message>

@code {
    PersonViewModel person = new PersonViewModel();
    string [] f = {"Tom", "Lisa", "Peter", "Hans", "Jacob"};
    string [] l = {"Smith", "Blackmore", "Simper", "Evans", "Reeves"};
    Random r = new ();
    protected override async Task OnInitializedAsync()
    {
        person.FirstName = f[r.Next(0, f.Length)];
        person.LastName  = l[r.Next(0, l.Length)];
        await Task.Delay(1); 
    }
    protected async Task Save()
    {
        var personResponse = await WebService.Add(person);
        if (personResponse?.Id > 0)
            await base.OnOk("Save Successfully", "personlist");
        else
            await base.OnError("Save Failed !!");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("personlist");
    }

}
